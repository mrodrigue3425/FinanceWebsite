    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
            "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Debug Pytest Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
            "${file}"
            ],
            "console": "integratedTerminal",
            "env": {
            "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Debug Flask App (Module Mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src.app",
                "FLASK_ENV": "development"
            },
            "args": [
                "run"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}
