"version": "0.2.0",
"configurations": [
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
            "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Run Pytest Tests (w/ Path Fix)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
            "${workspaceFolder}/tests"
            ],
            "console": "integratedTerminal",
            "env": {
            "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        }
    ]
}