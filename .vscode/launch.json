{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
            "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Debug Pytest Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
            "${file}"
            ],
            "console": "integratedTerminal",
            "env": {
            "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Debug Flask App (Module Mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src.app",
                "FLASK_ENV": "development"
            },
            "args": [
                "run"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "C++: Debug cpp_engine/main",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp_engine/main",
            "args": [],
            "stopAtEntry": false, 
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb", 
            "preLaunchTask": "Compile Debug Executable (C++) in cpp_engine"
        },
    ]
}
