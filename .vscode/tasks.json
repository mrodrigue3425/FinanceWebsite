{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Flask Server",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",      
                "flask",    
                "run",
                "--debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "FLASK_APP": "src.app",
                    "FLASK_ENV": "development"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
