{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ module",
            "type": "shell",
            "command": "python setup.py build_ext",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Start Flask Server",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "flask",
                "run",
                "--debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "FLASK_APP": "src.app",
                    "FLASK_ENV": "development"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean C++ module",
            "type": "shell",
            "command": "rm -f cpp_engine/*.so && rm -rf build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build C++ module",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["setup.py", "build_ext", "--inplace"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Clean C++ module",
            "problemMatcher": []
        }
    ]
}
