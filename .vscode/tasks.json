{
    "version": "2.0.0",
    "tasks": [

        {
            "label": "Compile Debug Executable (C++) in cpp_engine",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/cpp_engine/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cpp_engine"
            },
            "group": "build", 
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated", 
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Start Flask Server",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",      
                "flask",    
                "run",
                "--debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "FLASK_APP": "src.app",
                    "FLASK_ENV": "development"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
